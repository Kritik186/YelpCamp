
  <div class="container">
    <h1 style="text-align: center;">Create a new campground</h1>
        <div class="row">
        <div style="width: 30%; margin: auto;">
            <form action="/campgrounds" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter the name of place" name="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Enter the image url" name="url">
                </div>
                <div class="form-group">
                  <input class="form-control" type="text" placeholder="Enter some description about the place" name="ds">
              </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
       
       
      </div>
  </div>
 
